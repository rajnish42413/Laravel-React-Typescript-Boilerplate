@import "tailwindcss/base";
@import "tailwindcss/components";
@import "tailwindcss/utilities";
@import './variables.pcss';

body {
	font-family: "Lato", sans-serif;
	background: $body-bg;
}

h1,h2,h3,h4,h5 {
	font-family: "Merriweather", serif;
}

h1 {
  @extend .text-2xl;
}
h2 {
  @extend .text-xl;
}
h3 {
  @extend .text-lg;
}
a {
  @extend .text-blue-600;
}
